<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/music" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/image"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:text="The night tiger"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:text=" night tiger"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:id="@+id/audio_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_baseline_play_circle_outline_24"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lin2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/lin2"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_img_view"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Like"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/comment_img_view"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/comment_img" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="Comment"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/share_img_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/share_image" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>